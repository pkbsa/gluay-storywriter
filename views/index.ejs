<html lang="th">

<head>
    <title>WARD NONGGLUAY</title>
    <meta charset="UTF-8">
    <meta name="description" content="ward gluaymunchkin">
    <meta name="keywords" content="Gluay, Contest, Drawing">
    <meta name="author" content="Gluay">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit&family=Noto+Sans+Thai:wght@300&family=Prompt:wght@500&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="./style.css">
</head>

<body>
    <div class="page">

        <div class="flex-row">
            <a href="./questions">
                <button id="qa">Q&A</button>
            </a>

        </div>
        <div class="text">
            <img src="./assets/ward.png">
            <h2><span id="nong">NONG</span><span id="gluay"> GLUAY</span></h2>
            <img class="mt-3" src="./assets/gluay_logo.png" alt="gluay">
        </div>
        <div>
            <form>
                <input class="hidden" type="file" name="jpegFile" id="jpegFile" accept="image/jpeg" max-size="3145728" required>
                <button type='button' class="mb-2" id="add">เพิ่มรูปภาพ <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                  </svg></button><br>
                  <div class="mb-3" id="file-name-container"></div>

                <input type="text" class="form-control mt-1" placeholder="ชื่อผลงาน" required>
                <input type="text" class="form-control mt-1" placeholder="บรรยายเล็กน้อย" required>
                <input type="text" class="form-control mt-1" placeholder="ชื่อ IG" required>
                <p class="mt-5">1 คน สามารถส่งได้แค่ 1 ผลงาน เท่านั้นนะฮะ</p>
                <button id="send" type="submit" class="mt-0">ส่งผลงาน</button>

            </form>
        </div>

    </div>

    <script>
        document.getElementById("add").addEventListener("click", function() {
            document.getElementById("jpegFile").click();
        });

        document.getElementById("jpegFile").addEventListener("change", function() {
            // Get the selected file
            const selectedFile = this.files[0];
            
            // Display a truncated version of the filename if it exceeds 20 characters
            let displayedFilename = selectedFile.name;
            if (displayedFilename.length > 20) {
                displayedFilename = displayedFilename.substring(0, 17) + "...";
            }

            // Display the filename in the container, with the checkmark icon
            document.getElementById("file-name-container").innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check checkmark" viewBox="0 0 16 16">
                <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
            </svg> ${displayedFilename}`;
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>